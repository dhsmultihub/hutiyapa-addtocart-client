{
  "name": "ecommerce-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise E-commerce Frontend for Add-to-Cart system using Next.js, React, Redux Toolkit, TypeScript, and Tailwind",
  "author": "Vikas Vaibhav (programmerviva)",
  "license": "MIT",
  "scripts": {
    "dev": "next dev --turbo -H 0.0.0.0",
    "dev:fast": "next dev --turbo --port 3000 -H 0.0.0.0",
    "dev:local": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.0",
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "next": "^14.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-icons": "^5.0.1",
    "react-redux": "^9.2.0",
    "react-toastify": "^10.0.0",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.4.30",
    "prettier": "^3.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.0"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "nextjs",
    "react",
    "redux",
    "typescript",
    "ecommerce",
    "frontend",
    "add-to-cart",
    "programmerviva"
  ]
}
