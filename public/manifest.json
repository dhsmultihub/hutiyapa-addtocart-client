            "label": "Home page on desktop"
        },
        {
            "src": "/screenshots/mobile-home.png",
            "sizes": "375x667",
            "type": "image/png",
            "form_factor": "narrow",
            "label": "Home page on mobile"
        }
    ],
    "shortcuts": [
        {
            "name": "Cart",
            "short_name": "Cart",
            "description": "View your shopping cart",
            "url": "/cart",
            "icons": [
                {
                    "src": "/icons/cart-96x96.png",
                    "sizes": "96x96",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Products",
            "short_name": "Products",
            "description": "Browse products",
            "url": "/products",
            "icons": [
                {
                    "src": "/icons/products-96x96.png",
                    "sizes": "96x96",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Orders",
            "short_name": "Orders",
            "description": "View your orders",
            "url": "/orders",
            "icons": [
                {
                    "src": "/icons/orders-96x96.png",
                    "sizes": "96x96",
                    "type": "image/png"
                }
            ]
        }
    ],
    "related_applications": [],
    "prefer_related_applications": false,
    "edge_side_panel": {
        "preferred_width": 400
    },
    "launch_handler": {
        "client_mode": "focus-existing"
    },
    "handle_links": "preferred",
    "capture_links": "new-client",
    "file_handlers": [
        {
            "action": "/",
            "accept": {
                "text/csv": [
                    ".csv"
                ],
                "application/json": [
                    ".json"
                ]
            }
        }
    ],
    "protocol_handlers": [
        {
            "protocol": "web+hutiyapa",
            "url": "/?protocol=%s"
        }
    ],
    "share_target": {
        "action": "/share",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "file",
                    "accept": [
                        "image/*",
                        "text/*"
                    ]
                }
            ]
        }
    },
    "display_override": [
        "window-controls-overlay",
        "standalone",
        "minimal-ui"
    ],
    "features": [
        "Cross Platform",
        "fast",
        "simple"
    ],
    "edge_side_panel": {
        "preferred_width": 400
    }
}